

<!DOCTYPE html>
<html>
  <head>
    <title><%= t('u_story') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "github-dark.min" %>
    <%= javascript_include_tag "highlight.min" %>
    <%= javascript_include_tag "farbic.min" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="font-roboto">
    <% flash.each do |color, msg| %>
      <div class="text-<%= color %>-700 bg-<%= color %>-100 text-sm flex p-3 lg" role="alert">
        <%= msg %>
      </div>
    <% end %>
    <div>
      <%= render 'layouts/nav' %>
      <main class="px-6 py-8">
        <div class="flex justify-between container mx-auto mt-2" style="margin-top: 6rem;">
          <div class="w-full lg:w-8/12">
            <%= yield %>
          </div>
          <div class="-mx-8 w-4/12 hidden lg:block">
            <div class="mt-10 px-8">
              <h1 class="mb-4 text-xl font-bold text-gray-700"><%= t('categories') %></h1>
                <%= render 'layouts/categories' %>
            </div>
          </div>
        </div>
      </main>
    </div>
    <script>
      hljs.highlightAll();
    </script>
  </body>
</html>
